<Window x:Class="YTDownloadConvert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YTDownloadConvert"
        mc:Ignorable="d"
        Title="MainWindow" Height="268" Width="452">
    <Grid>
        <TextBox x:Name="tbLink" Margin="10,10,78,0" TextWrapping="Wrap" VerticalAlignment="Top" UndoLimit="10"/>
        <Button x:Name="bGo" Content="Download" HorizontalAlignment="Right" Margin="0,10,15,0" VerticalAlignment="Top" Click="bGo_Click" IsDefault="True" Height="18"/>
        <Label x:Name="lDownloading" Content="Downloading" HorizontalAlignment="Left" Margin="71,74,0,0" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Window>
